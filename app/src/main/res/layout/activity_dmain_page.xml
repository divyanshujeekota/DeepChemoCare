<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DMainPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/check_appointment_dmainpage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hello Doctor,"
        android:textSize="33sp" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="353dp"
        android:layout_height="200dp"
        app:cardElevation="20dp"
        android:id="@+id/check_dmain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="Check\nAppointments"
                android:textSize="20sp" />
            
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/background_two"
                />
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Check Now"
                android:backgroundTint="#002059"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    


    <androidx.cardview.widget.CardView
        android:layout_width="353dp"
        android:layout_height="200dp"
        app:cardElevation="20dp"
        android:id="@+id/prescription_dmainpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="Prescriptions"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/background_three"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Check Now"
                android:backgroundTint="#002059"
                android:id="@+id/prescription_check"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>