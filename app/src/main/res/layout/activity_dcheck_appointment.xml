<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DCheckAppointment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/check_appointment_dcheckappointment"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Check\nAppointments"
        android:textSize="33sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/dcheck_recycler"
        android:layout_height="match_parent"
        android:layout_below="@+id/check_appointment_dcheckappointment"
        android:layout_marginTop="20dp"/>



</RelativeLayout>