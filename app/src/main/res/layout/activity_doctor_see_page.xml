<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorSeePage">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="50dp"
        android:id="@+id/navigate_doctorsee"
        app:cardBackgroundColor="#88B7E6"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:padding="9dp"
            android:layout_height="match_parent"
            android:src="@drawable/distance"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Schedule\nAppointment"
        android:textSize="35sp"
        android:id="@+id/textview1_book_appointment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1_book_appointment"
        android:layout_marginLeft="20dp"
        android:id="@+id/doctor_image_appoinment"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_borderline"
            >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctors_in_white_coats"
        android:layout_marginTop="10dp"
        />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/doctor_image_appoinment"
        android:layout_toRightOf="@+id/doctor_image_appoinment"
        android:fontFamily="@font/inter_semibold"
        android:text="Dr. Name"
        android:layout_marginLeft="10dp"
        android:id="@+id/doctor_name_doctorsee"
        android:textColor="#0A4181"
        android:textSize="19sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_name_doctorsee"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/doctor_image_appoinment"
        android:fontFamily="@font/inter_semibold"
        android:text="Dr. Name"
        android:layout_marginLeft="10dp"
        android:id="@+id/doctor_special_doctorsee"
        android:textColor="#0A4181"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_image_appoinment"
        android:text="description"
        android:id="@+id/description_doctorsee"
        android:layout_alignLeft="@+id/doctor_image_appoinment"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/textview2_doctorsee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_doctorsee"
        android:layout_alignLeft="@+id/description_doctorsee"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="Book Appointment"
        android:textColor="#0A4181"

        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2_doctorsee"
        android:layout_marginTop="10dp"
        android:id="@+id/linearlayout_one_doctorsee"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/firstslot"

            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="9:30 AM-11:30 AM"
                    android:textSize="13sp"
                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/secondslot"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="12:00 PM-02:00 PM"
                    android:textSize="13sp"
                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/thridslot"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginRight="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM-04:30 PM"
                    android:textSize="13sp"
                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Feedback"
        android:layout_below="@+id/linearlayout_one_doctorsee"
        android:layout_alignLeft="@+id/doctor_image_appoinment"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="#0A4181"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#88B7E6"
        android:text="Book Now"
        android:id="@+id/book_now_doctorsee"
        android:textSize="15sp"/>


    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/linearlayout_one_doctorsee"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#88B7E6"
        android:text="Give"
        android:id="@+id/give_doctorsee"
        android:textSize="14sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/give_doctorsee"
        android:layout_above="@+id/book_now_doctorsee">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview_doctorsee"
            />



    </ScrollView>




</RelativeLayout>